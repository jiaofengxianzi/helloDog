view{
  font-weight: normal;
  font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}
button::after {
  border: 0;
} 
.login{
  padding: 60rpx 40rpx 0;
}
.input{
  display: flex;
  border-bottom: 1rpx solid #DBDBDB;
  color: #333333;
  margin-top: 28rpx;
  padding-bottom: 12rpx; 
}

.input label{
  vertical-align: middle;
  height: 60rpx;
  line-height: 60rpx;
  width: 100rpx;
  text-align: right;
}
.input input{
  border: none;
  border-radius: 5px; 
  color: #282828;
  height: 60rpx;
  line-height: 60rpx;
  outline: none;  
  margin-left: 40rpx;
}
.input-second{
  position: relative;
}
.input-second button{
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 0;
  border-radius: 30rpx;
  background-color: #1fcabc;
 
  right: 0;
  position: absolute;
  color: #fff;
}

.phcolor{
  color: #bdc1c1
}
.input-last{
  margin-top: 60rpx;
  border: 0;
}
.input-last button{
 
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  border:none;
  color: #fff;
  font-size: 32rpx;
  background-size: 100% 100%;
  background-image: url("data:image/png;base64,");
}
checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
}

.agreement-box{
  margin-top: 36rpx;
  text-align: center;
}
.agreement-box text{
  color: #ed4e3d;
}


