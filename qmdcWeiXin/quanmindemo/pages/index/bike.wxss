/* pages/index/bike.wxss */
page{
  height: 100%;
  width: 750rpx;
}
.bike-content{
  background: url('http://image.qg8.com/quanminbike/xcx/bikeBg.jpg?v=1') no-repeat;
  background-size: 100% 100%; 
  height: 100%;
}


.btn-box{
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  transform: translate(-50%,0);
  
}
.btn-box image{
  width: 220rpx;
  height: 220rpx;
}
.loading{
  
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 100;
  top: 0;
  left: 0;
}
.load-pro{
  position: absolute;
  z-index: 1;
  top: 50%;
  height: 20px;
  transform: translate(0,-50%);
  width: 90%;
  left: 7%;
  color: #fff;
}
.load-bg{
  background-color: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  
}
.loading-hide{
  display: none;
}


.to-pay{
  position: absolute;
  right: 0;
  bottom: 80rpx;
}
.to-pay image{
  width: 160rpx;
  height: 150rpx;
}

.tips{
  position: absolute;
  top: 230rpx;
  right: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  width: 460rpx;
  line-height: 48rpx;
  height: 50rpx;
  background-size: cover ;
  background-image: url("data:image/png;base64,");
}
.tips-hide{
  display: none;
}
.bike-type {
   
  margin: 0 48rpx ;
  padding-top: 300rpx;
}
.bike-img{
  width: 33%;
  float:left;
  text-align: center;
  font-size: 28rpx;
  height: 215rpx;
  margin-top: 30rpx;
}
.bike-img text{
  display: block;
  text-align: center;
  color: #32808a;
  
}
.bike-img text.maintain{
  color: #aaa;
  display: none;
  font-size: 24rpx;
}
.bike-img text.maintain-on{
  display: block;
}
.bike-img image{
  width: 140rpx;
  height: 140rpx;
  transform: translate(0, 5rpx);
}